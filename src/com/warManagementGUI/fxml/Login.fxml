<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.warManagementGUI.controllers.LoginController">
   <center>
      <VBox alignment="CENTER" maxWidth="400" minWidth="350" spacing="20"
            style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #dee2e6; -fx-border-radius: 10; -fx-border-width: 1;">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
         </padding>
         <!-- Header -->
         <VBox alignment="CENTER" spacing="5">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #343a40;"
                   text="War Data Analysis System"/>
         </VBox>
         <Label style="-fx-font-size: 14px; -fx-text-fill: #6c757d;" text="Secure Access Portal"/>

         <!-- Login Form -->
         <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;">
            <!-- Username Field -->
            <VBox spacing="5">
               <Label style="-fx-font-weight: bold; -fx-text-fill: #495057;" text="Username:"/>
               <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-pref-height: 35px;"/>
            </VBox>

            <!-- Password Field -->
            <VBox spacing="5">
               <Label style="-fx-font-weight: bold; -fx-text-fill: #495057;" text="Password:"/>
               <PasswordField fx:id="passwordField" promptText="Enter your password"
                              style="-fx-pref-height: 35px;"/>
            </VBox>

            <!-- Login Button -->
            <Button fx:id="loginButton" alignment="CENTER" contentDisplay="CENTER" onAction="#handleLogin"
                    prefWidth="150"
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 40px; -fx-background-radius: 5;"
                    text="Login" textAlignment="CENTER"/>

            <!-- Action Links -->
            <HBox alignment="CENTER" spacing="10">
               <Button onAction="#handleForgotPassword"
                       style="-fx-background-color: transparent; -fx-text-fill: #6c757d; -fx-underline: true;"
                       text="Forgot Password?"/>
               <Separator orientation="VERTICAL"/>
               <Button onAction="#showDemoCredentials"
                       style="-fx-background-color: transparent; -fx-text-fill: #007bff; -fx-underline: true;"
                       text="Demo Users"/>
            </HBox>
         </VBox>

         <!-- Footer -->
         <Separator/>
         <VBox alignment="CENTER" spacing="5">
            <Label style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #6c757d;"
                   text="System Access Levels:"/>
            <Label style="-fx-font-size: 10px; -fx-text-fill: #6c757d;" text="ðŸ”´ Admin: Full system access"/>
            <Label style="-fx-font-size: 10px; -fx-text-fill: #6c757d;"
                   text="ðŸŸ¡ Analyst: Data analysis and modification"/>
            <Label style="-fx-font-size: 10px; -fx-text-fill: #6c757d;" text="ðŸŸ¢ Viewer: Read-only access"/>
         </VBox>
      </VBox>
   </center>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</BorderPane>
